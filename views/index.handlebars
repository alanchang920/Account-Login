<div class="container py-5">
  <form action="/" method="POST" class="d-flex flex-column align-items-center rounded">

    <h2 class="mx-5 mt-4 pb-1">Account Login</h2>

    <input name="email" type="email" placeholder="Email" class="rounded my-3 p-2" value={{userInput.email}}>

    <input name="password" type="password" placeholder="Password" class="rounded my-3 p-2">

    {{#if fault}}
    <p class="text-danger mx-auto">{{fault}}</p>
    {{/if}}

    <button type="submit" class="rounded my-4 p-2 px-4">Sign in</button>

  </form>
</div>